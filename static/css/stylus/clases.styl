/*GRID*/
.grid 
	margin 0 auto
	max-width 1366px
	padding 0
	position relative
	width 100%
/*Botones del Header*/
.registrarse,.login
	border solid 1px #fff
	border-radius 2px
	transition all 200ms ease-in-out
.registrarse
	&:hover
		background-color rojo
		border solid 1px rojo
.login
	background-color #FFF
	color rojo
	transition all 200ms ease-in-out
	&:hover
		background-color rojo
		border solid 1px rojo
		color white

	
/*CLASES PARA COLORES*/
.fc-verde
	color verde
/*Posicion de letras*/
.ta-right
	text-align right !important
/*Titulo Seccion*/
.titulos-secciones
	width 100%
	padding 50px 0
	position relative
	font-size 3rem
	font-weight 400
	text-align center
	span
		display block
		border solid 1px verde
		width 200px
		position absolute
		left 50%
		margin-left -100px
/*IMAGEN*/
.b-lazy 
	opacity 0
.t-circulo 
	position absolute
	border-radius 50%
	transform translate3d(0,0,0)
	backface-visibility hidden
	perspective 1000
	z-index 1
.boton
	overflow hidden
	position relative
/*CARGANDO*/
.cir-car
	width 100px
	height 100px
	position absolute
	top 50%
	left 50%
	margin-top -50px
	margin-left -50px
.circular
	animation rotar 2000ms ease-in-out infinite
	height 100px
	position relative
	width 100px

.path 
	animation dash 1.5s ease-in-out infinite
	/*Color del 'cargando'*/
	stroke c-azul
	stroke-dasharray 1,200
	stroke-dashoffset 0
	stroke-linecap round
/*ICONOS*/
.icon-cerrar
	font-family 'icomoon'
	speak none
	font-style normal
	font-weight normal
	font-variant normal
	text-transform none
	line-height 0
	-webkit-font-smoothing antialiased
.icon-cerrar:before
	content "\e600"

.flecha
	height 50px
	width 50px
	top 20px
	right 20px
	position absolute
	z-index 4
	text-align center
	font-size 2em
	color white
	cursor pointer
	i
		line-height 50px
		display block
/***************
ANIMACIONES
***************/
/*Animacion del cargando*/
@keyframes rotar
	100%
		transform rotate(360deg)
@keyframes dash
	0%
		stroke-dasharray 1,200
		stroke-dashoffset 0
	50%
		stroke-dasharray 89,200
		stroke-dashoffset -35
	100%
		stroke-dasharray 89,200
		stroke-dashoffset -124
	
		
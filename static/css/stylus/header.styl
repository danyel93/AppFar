header
	color #fff
	display block
	height 80px
	padding 0
	position fixed
	top 0
	/*Arregla en chrome el parpadeo del scroll con el menu fixed*/
	transform translateZ(0)
	perspective 1000
	width 100%
	z-index 9
	.logo
		height 80px
		margin 0
		padding 0
		position relative
		text-align center
		width 10%
		img
			max-width 100%
			max-height 100%
	ul
		font-weight 700
		margin 0
		min-height 100%
		position absolute
		right 0
		top 0
		width 30%
		text-align center
		padding 0
		
		li
			display inline-block
			position relative
			font-size 1.8rem
			text-align center
			width 45%
			padding 15px 0
			margin 15px 5px
			cursor pointer 

	